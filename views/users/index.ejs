<%- include('../layouts/head.ejs', {title : 'Listado de usuarios'}) ;%>
<body class="h-100 d-flex flex-column">
  <%- include('../layouts/nav.ejs') ;%> 
  <div id="height-cuerpo" class="row">
    <%- include('../layouts/menu-aside.ejs') ;%>    
    <div class="container-fluid py-5 px-md-5 col">
      <header class="d-flex align-items-center justify-content-between">
        <h1>
          Listado de Usuarios del Sistema
        </h1>
        <a class="btn btn-outline-success" href="/users/create">Nuevo Usuario</a>
      </header>
      <main class="col">
        <div class="overflow-auto">
          <table class="table table-striped table-hover">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Nombres</th>
                <th scope="col">Usuario</th>
                <th scope="col">Rol</th>
                <th scope="col">Acciones</th>
              </tr>
            </thead>
            <tbody id="usersList">
                             
            </tbody>
          </table>
        </div>       
      </main>
    </div>
    <%- include('../layouts/footer.ejs') ;%>
  <script src="/js/users/index.js"></script>  
</body>
</html>