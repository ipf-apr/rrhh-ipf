<%- include('../layouts/head.ejs', {title : 'Editar empleado'}) ;%>
<body>
  <%- include('../layouts/nav.ejs');%>
    <div id="height-cuerpo" class="row">
      <%- include('../layouts/menu-aside.ejs') ;%>
        <div class="container-fluid p-5 mb-2 col">
          <header>
            <h1>
              Editar Empleado
            </h1>
            <ul id="validationErrors" class="text-danger">
          </header>
          <main>
            <form id="formEditEmployee" action="#" class="row g-3" data-id="<%= id  %>">

              <%- include('partials/_form.ejs') ;%>
                <label><input type="radio" id="habilitado" name="promotion" value="1"> Habilitado</label>
                <label><input type="radio" id="inhabilitado" name="promotion" value="0"> Inhabilitado</label>

                <div class="col-12">
                  <button class="btn btn-primary" type="submit">Guardar</button>
                  <button class="btn btn-secondary" onclick="history.back()">Cancelar</button>
                </div>
            </form>
          </main>
        </div>
        <%- include('../layouts/footer.ejs') ;%>        
    <script src="/js/employees/edit.js"></script>
</body>

</html>