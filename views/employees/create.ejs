<!doctype html>
<html lang="es">

<head>
  <title>Carga empleados</title>
  <!-- Required meta tags -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

  <!-- Bootstrap CSS v5.2.1 -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
  <link rel="stylesheet" href="../css/style.css">
</head>

<body>
  <%- include('../layouts/nav.ejs');%>
    <div id="height-cuerpo" class="row">
      <%- include('../layouts/menu-aside.ejs') ;%>
        <div class="container-fluid p-5 mb-2 col">
          <header>
            <h1>
              Crear Empleado
            </h1>
            <br><br>
          </header>
          <main>
            <form action="/employees" method="POST" class="row g-3 needs-validation ">
              <div class="col-md-4">
                <label for="lastName" class="form-label">Apellido <small class="text-danger">(*)</small></label>
                <input type="text" class="form-control" name="lastName" id="lastName" placeholder="Gabriel" required>
              </div>
              <div class="col-md-4">
                <label for="name" class="form-label">Nombres <small class=" text-danger">(*)</small></label>
                <input type="text" class="form-control" name="name" id="name" placeholder="Acosta" required>
              </div>
              <div class="col-md-3">
                <label for="validationCustomUsername" class="form-label">DNI <small
                    class=" text-danger">(*)</small></label>
                <div class="input-group has-validation">
                  <span class="input-group-text" id="inputGroupPrepend">Nro</span>
                  <input type="number" class="form-control" name="dni" id="dni" aria-describedby="inputGroupPrepend"
                    placeholder="41234789" required>
                </div>
              </div>
              <div class="col-md-8">
                <label for="domicilio" class="form-label">Domicilio <small class=" text-danger">(*)</small></label>
                <input type="text" class="form-control" name="domicilio" id="domicilio"
                  placeholder="Barrio San Martin calle Junin 1030" required>
              </div>
              <div class="col-md-3">
                <label for="fechaNac" class="form-label">Fecha de Nacimiento <small
                    class=" text-danger">(*)</small></label>
                <input type="date" class="form-control" name="fechaNac" id="fechaNac" required>
                <div class="invalid-feedback">
                </div>
              </div>
              <div class="col-md-4">
                <label for="validationCustomUsername" class="form-label">Celular <small
                    class=" text-danger">(*)</small></label>
                <div class="input-group has-validation">
                  <span class="input-group-text" id="phone">+549</span>
                  <input type="number" class="form-control" name="phone" id="phone" aria-describedby="inputGroupPrepend"
                    placeholder="3704786500" required>
                </div>
              </div>
              <div class="col-md-3">
                <label for="nroLegajo" class="form-label">Nro. legajo <small class=" text-danger">(*)</small></label>
                <input type="number" class="form-control" placeholder="01" name="nroLegajo" id="nroLegajo" required>
              </div>
              <div class="col-md-4">
                <label for="ingreso" class="form-label">Fecha de Ingreso<small class=" text-danger">(*)</small></label>
                <input type="date" class="form-control" name="ingreso" id="ingreso" required>

              </div>
              <!-- <div class="col-md-3">
                <label for="puestoLaboral" class="form-label">Puesto laboral <small
                    class=" text-danger">(*)</small></label>
                <select name="puestoLaboral" id="puestoLaboral" class="form-select form-select-sm" aria-label=".form-select-sm example" required>
                  <option selected>seleccione el puesto</option>
                  <option value="1">One</option>
                  <option value="2">Two</option>
                  <option value="3">Three</option>
                  <option value="4">Three</option>
                  <option value="5">Three</option>
                  <option value="6">Three</option>
                </select>
              </div> -->
              <div class="col-12">
                <button class="btn btn-primary" type="submit">Crear</button>
                <button class="btn btn-secondary" type="reset">Borrar formulario</button>
              </div>
            </form>
          </main>
        </div>
        <footer class="bg-dark text-light text-center overflow-hidden position-absolute bottom-0">
          <p>Todos los derechos reservados - Â© 2023 Company, Inc</p>
        </footer>
    </div>


    <!-- Bootstrap JavaScript Libraries -->
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
      </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
      integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
      </script>
</body>

</html>